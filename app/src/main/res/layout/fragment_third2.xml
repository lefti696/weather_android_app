<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.r2d2.weather_r1.ThirdFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">


    <com.pwittchen.weathericonview.library.WeatherIconView
        android:id="@+id/day1_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:weatherIconResource="@string/wi_day_storm_showers"
        custom:weatherIconColor="@android:color/black"
        custom:weatherIconSize="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/day1"
        android:layout_gravity="center_horizontal" />

    <com.pwittchen.weathericonview.library.WeatherIconView
        android:id="@+id/day2_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:weatherIconResource="@string/wi_day_storm_showers"
        custom:weatherIconColor="@android:color/black"
        custom:weatherIconSize="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/day2"
        android:layout_gravity="center_horizontal" />

    <com.pwittchen.weathericonview.library.WeatherIconView
        android:id="@+id/day3_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:weatherIconResource="@string/wi_day_storm_showers"
        custom:weatherIconColor="@android:color/black"
        custom:weatherIconSize="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/day3"
        android:layout_gravity="center_horizontal" />

    <com.pwittchen.weathericonview.library.WeatherIconView
        android:id="@+id/day4_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:weatherIconResource="@string/wi_day_storm_showers"
        custom:weatherIconColor="@android:color/black"
        custom:weatherIconSize="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/day4"
        android:layout_gravity="center_horizontal" />

    <com.pwittchen.weathericonview.library.WeatherIconView
        android:id="@+id/day5_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:weatherIconResource="@string/wi_day_storm_showers"
        custom:weatherIconColor="@android:color/black"
        custom:weatherIconSize="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/day5"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
